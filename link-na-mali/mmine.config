server { listen 80; server_name linknamali.ke;

    # Redirect all HTTP traffic to HTTPS
    return 301 https://$host$request_uri;
}

server { listen 443 ssl; server_name linknamali.ke;

    # SSL certificates from Let's Encrypt
    ssl_certificate /etc/letsencrypt/live/linknamali.ke/fullchain.pem; ssl_certificate_key /etc/letsencrypt/live/linknamali.ke/privkey.pem;

    # Recommended SSL Settings
    ssl_protocols TLSv1.2 TLSv1.3; ssl_ciphers 'TLS_AES_128_GCM_SHA256:TLS_AES_256_GCM_SHA384:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;

    # HTTP Strict Transport Security (HSTS)
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    # Diffie-Hellman key exchange (for stronger security)
    ssl_dhparam /etc/ssl/certs/dhparam.pem;

    # Enable OCSP Stapling
    ssl_stapling on; ssl_stapling_verify on;

    # Reverse Proxy to Vite Development Server for landing page
    location / {
        # Proxy pass to Vite dev server on port 5173
        proxy_pass http://localhost:5173; proxy_http_version 1.1; proxy_set_header Upgrade $http_upgrade; proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host; proxy_cache_bypass $http_upgrade;
    }

    # Reverse Proxy to Vite Development Server for dashboard (served at /portal)
    location /portal {
        # Proxy pass to Vite dev server for the dashboard
        proxy_pass http://localhost:5174; proxy_http_version 1.1; proxy_set_header Upgrade $http_upgrade; proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host; proxy_cache_bypass $http_upgrade;
    }

    # Serve static files for landing page (index.html)
    location /landing { root /var/www/linknamali; # Path to your landing page static files (build folder) index index.html; try_files $uri $uri/ /index.html;
    }

    # Serve static files for dashboard build
    location /dashboard { root /var/www/linknamali/build; # Path to your dashboard build files index index.html; try_files $uri $uri/ /dashboard/index.html;
    }

    # Reverse Proxy to React app (running on port 3000)
    location /app { proxy_pass http://localhost:3000; # React app running on port 3000 proxy_http_version 1.1; proxy_set_header Upgrade $http_upgrade; 
        proxy_set_header Connection 'upgrade'; proxy_set_header Host $host; proxy_cache_bypass $http_upgrade;
    }

    # Error page handling
    error_page 404 /index.html;

    # Log settings
    access_log /var/log/nginx/linknamali.access.log; error_log /var/log/nginx/linknamali.error.log;
}

